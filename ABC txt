WITH second_tuesday_current_month AS (
    -- Calculate the first day of the current month
    SELECT 
        DATE_TRUNC('MONTH', CURRENT_DATE) AS first_of_month,
        CASE 
            WHEN DAYOFWEEK(DATE_TRUNC('MONTH', CURRENT_DATE)) <= 3 
                THEN DATEADD(DAY, 10 - DAYOFWEEK(DATE_TRUNC('MONTH', CURRENT_DATE)), DATE_TRUNC('MONTH', CURRENT_DATE))
            ELSE 
                DATEADD(DAY, 17 - DAYOFWEEK(DATE_TRUNC('MONTH', CURRENT_DATE)), DATE_TRUNC('MONTH', CURRENT_DATE))
        END AS second_tuesday
)
SELECT 
    d.*,
    CASE 
        WHEN second_tuesday_current_month.second_tuesday = CURRENT_DATE 
        THEN 'Today is the second Tuesday!' 
        ELSE 'Today is not the second Tuesday.'
    END AS is_second_tuesday
FROM 
    your_date_table d
JOIN 
    second_tuesday_current_month 
    ON d.date_column = second_tuesday_current_month.second_tuesday;
